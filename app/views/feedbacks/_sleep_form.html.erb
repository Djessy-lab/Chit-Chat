<%= turbo_frame_tag "feedback_sleep", class: "feedback-card" do %>
    <%= simple_form_for [child, sleep_feedback] do |f| %>
      <div class="feedback-rating sleep-rating">
        <%= f.input :category, :as => :hidden %>
        <%= f.input :rating, collection: (1..3).to_a, label: "Sommeil",input_html: {data: {controller: "star-rating"}} %>
      </div>
      <div class="form-post-header feedback-note" id="headingOne">
        <div class="feedback-note-icon">
          <button class="btn hover-green" data-bs-toggle="collapse" data-bs-target="#collapse<%=sleep_feedback.id%>" aria-expanded="false" aria-controls="collapse<%=sleep_feedback.id%>">
            <i class="fa-regular fa-pen-to-square hover-green"></i>
              Note
          </button>
        </div>
      </div>
      <div id="collapse<%=sleep_feedback.id%>" class="collapse">
        <%= f.input :content, label: false %>
      </div>
      <div class="form-actions button-feedback">
        <%= f.button :submit, "Envoyer"%>
      </div>
    <% end %>
  <% end %>
