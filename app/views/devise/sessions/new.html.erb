<% content_for :display_navbar, false %>
<% content_for :display_navmenu, false %>
<div class="container-login">
  <div class="logo-login">
        <%= image_tag "logo.png", class:  %>
        <p class="text-logo">
          Chit<br>
          &nbsp&nbspChat
        </p>
      </div>
  <div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs form-login">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" }, label: "E-mail" %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" }, label: "Mot de passe" %>
        <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions links-login">
        <%= f.button :submit, "Se connecter" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

  </div>

</div>
