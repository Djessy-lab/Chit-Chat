<%= simple_form_for post do |f| %>
            <%= f.input :content, label: "Contenu" %>
            <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Photos" %>
            <%= f.association :children,
                                  as: :check_boxes,
                                  collection: current_user.accepted_children.map do |child|
                                  cl_image_tag child.photo.key, child.first_name, child.child_id
                                  end)%>
              <%= f.button :submit, "Valider" %>
